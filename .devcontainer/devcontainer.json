{
    "name": "Jekyll DevContainer",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "forwardPorts": [4000],
    "postCreateCommand": "bundle install",
    "customizations": {
        "vscode": {
            "extensions": [
                "ginfuru.ginfuru-vscode-jekyll-syntax",
                "streetsidesoftware.code-spell-checker"
            ]
        }
    }
}

